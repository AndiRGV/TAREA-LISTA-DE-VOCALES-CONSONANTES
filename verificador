package jv.argv.listavocales;

public class verificador {
		
		public char[] convertirCadenaAAreglo(String cadena) {
			char[] arregloCaracteres = cadena.toCharArray();
			return arregloCaracteres;
			
		}
		public boolean esVocal(char caracter) {
				boolean comparador = false;
				switch (caracter) {
				case 'a':
					comparador = true;
					break;
				case 'e':
					comparador = true;
					break;
				case 'i':
					comparador = true;
					break;
				case 'o':
					comparador = true;
					break;
				case 'u':
					comparador = true;
					break;
				case 'A':
					comparador = true;
					break;
					
				case 'E':
					comparador = true;
					break;
				case 'I':
					comparador = true;
					break;
				case 'O':
					comparador = true;
					break;
				case 'U':
					comparador = true;
					break;

				default:
					comparador = false;
					break;
				}
				return comparador;
		}
		
		}

	
